#include <stdio.h>

void main()
{
    int n=4;
    
    for (int i=0; i<n; i++)
    {
        for (int j=1; j<=i; j++)
        {
            printf(" ");
        }
        
        for (int k=65; k<65+n-i; k++)
        {
            printf("%c",k);
        }
        
        for (int k=65+n-i-2; k>=65; k--)
        {
            printf("%c",k);
        }
        
        printf("\n");
    }
}

/*output
ABCDBCA
 ABCBA
  ABA
   A
*/ 
